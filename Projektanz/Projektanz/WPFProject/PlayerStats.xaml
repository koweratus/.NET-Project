<Window x:Class="WPFProject.PlayerStats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProject"
        mc:Ignorable="d"
        Title="PlayerStats" Height="450" Width="200"
        Background="#FF15A5C5"
        Name="ps">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard BeginTime="0" Duration="0:0:0.3">
                        <DoubleAnimation Storyboard.TargetProperty="Width" Storyboard.TargetName="ps" From="200" To="400"/>
                        <DoubleAnimation Storyboard.TargetProperty="Height" Storyboard.TargetName="ps" From="450" To="650"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>
    </Window.Triggers>
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Name="pImage"
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="6" Grid.ColumnSpan="2" Margin="20,10,16,-10">
        </Image>
        <Label Name="pName"
               Grid.Column="1"
               Grid.Row="0">
        </Label>
        <Label Name="pNumber"
               Grid.Column="1"
               Grid.Row="1">
        </Label>
        <Label Name="pPosition"
               Grid.Column="1"
               Grid.Row="2">
        </Label>
        <Label Name="pRole"
               Grid.Column="1"
               Grid.Row="3">
        </Label>
        <Label Name="pGoalsScored"
               Grid.Column="1"
               Grid.Row="4">
        </Label>
        <Label Name="pYellowCards"
               Grid.Column="1"
               Grid.Row="5">
        </Label>
    </Grid>
</Window>
